<div class="card-game">
  <div class='card-game-infos'>
    <div class='card-game-infos-img'>
      <%= image_tag @game.cover %>
    </div>
    <div class='card-game-infos-tags'>
      <h5><strong><%= @game.title %></strong></h5>
      <p>console : <strong><%=@game.platform%></strong></p>
      <p>publisher : <strong><%=@game.publisher%></strong></p>
      <p>genre : <strong><%=@game.genre%></strong></p>
      <p>released : <strong><%=@game.release_year%></strong></p>
    </div>
  </div>
   <%= link_to new_game_offer_path(@game), class: 'btn btn-success d-block' do %>
      <i class="fa-solid fa-coins"></i>
      Estimer mon exemplaire
    <% end %>
  </div>
<div>
  <% @offers.each do |offer| %>
    <ul>
    <li>Vendeur : <%= offer.user.username %></li>
    <li>Prix : <%= offer.price %>â‚¬</li>
    <li>Description : <%= offer.description %></li>

    <%# Afficher les photos de l'annonce (offer) s'il y en a %>
    <% if offer.photos.attached? %>
      <% offer.photos.each do |photo| %>
        <%= cl_image_tag photo.key %>
      <% end %>
    <% end %>

    <%= link_to "Voir cette annonce", ""%>
    <%= link_to "Supprimer l'annonce", offer_path(offer), data: {turbo_method: :delete, turbo_confirm: "Supprimer cette annonce ?"}%>
    </ul>
  <% end %>
