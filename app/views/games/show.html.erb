<%# Carte du jeu %>
<div class="card-game">
  <div class='card-game-infos'>
      <div class='card-game-infos-img'>
        <%= image_tag @game.cover %>
      </div>
    <div class='card-game-infos-tags'>
      <h5><strong><%= @game.title %></strong></h5>
      <p>console : <strong><%=@game.platform%></strong></p>
      <p>publisher : <strong><%=@game.publisher%></strong></p>
      <p>genre : <strong><%=@game.genre%></strong></p>
      <p>released : <strong><%=@game.release_year%></strong></p>
    </div>
  </div>
      <%= link_to new_game_offer_path(@game), class: 'btn btn-success d-block' do %>
        <i class="fa-solid fa-coins"></i>
        Estimer mon exemplaire
      <% end %>
</div>


<% @offers.each do |offer| %>
  <div class="card-offer-infos">
    <p>Vendeur : <%= offer.user.username%></p>
    <p>Prix : <%= offer.price %>â‚¬</p>
    <p>Description : <%= offer.description %></p>
    <br><p><i class="text-primary fa-solid fa-eye"></i> <%= link_to "Voir cette annonce", offer_path(offer)%></p>
    <p><i class="text-primary fa-solid fa-trash"></i> <%= link_to "Supprimer l'annonce", offer_path(offer), data: {turbo_method: :delete, turbo_confirm: "Supprimer cette annonce ?"}%></p>
    <p><i class="text-primary fa-solid fa-cart-shopping"></i> <%= link_to "Ajouter au panier", "#"%></p>
    <p><i class="text-primary fa-solid fa-heart"></i> <%= link_to "favoris", "#"%></p>
    <p><i class="text-primary fa-solid fa-layer-group"></i>
       <%= link_to offers_path(offer.user.id) do %>
        collection de <strong><%= offer.user.username %></strong>
       <% end %>
    </p>
  </div>
<% end %>

