<%# Carte du jeu %>
<div class="card-game">
  <div class='card-game-infos'>
    <div class='card-game-infos-img'>
      <%= image_tag @game.cover %>
    </div>
    <div class='card-game-infos-tags'>
      <h5><strong><%= @game.title %></strong></h5>
      <p>console : <strong><%=@game.platform%></strong></p>
      <p>publisher : <strong><%=@game.publisher%></strong></p>
      <p>genre : <strong><%=@game.genre%></strong></p>
      <p>released : <strong><%=@game.release_year%></strong></p>
    </div>
  </div>
  <div class="card-logo-heart fa-xl">
    <% if Favori.where(user: current_user, game: @game).empty? %>
        <p><%= link_to favoris_path(game_id:@game),data: {turbo_method:"POST"}  do %>
          <i class="text-danger fa-regular fa-heart"></i>
          <% end %>
        </p>
    <% else %>
      <p><%= link_to favori_path(Favori.where(user: current_user, game: @game).first.id, game_id: @game), data: {turbo_method: :delete } do %>
      <i class="text-danger fa-solid fa-heart"></i>
      <% end %>
      </p>
    <% end %>
  </div>
  <%= link_to new_game_offer_path(@game), class: 'btn btn-success d-block' do %>
    <i class="fa-solid fa-coins"></i>
    Estimer mon exemplaire
  <% end %>
</div>

<div>
  <%# Carte du vendeur ayant le jeu %>
  <% @offers.each do |offer| %>
    <div class="card-offer-infos">
      <p>Vendeur :<strong><%= link_to offers_path(user_id: offer.user.id), class: "link-dark" do %>
          <%= offer.user.username %></strong></p><% end %>
      <p>Prix : <%= offer.price %>â‚¬</p>
      <p>Description : <%= offer.description %></p>
      <br><p><i class="text-primary fa-solid fa-eye "></i> <%= link_to "Voir cette annonce", offer_path(offer)%></p>
    </div>
  <% end %>
</div>
